{
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/chat",
            "destination": "/backend/main.py"
        },
        {
            "source": "/mood",
            "destination": "/backend/main.py"
        },
        {
            "source": "/journal",
            "destination": "/backend/main.py"
        },
        {
            "source": "/history",
            "destination": "/backend/main.py"
        },
        {
            "source": "/",
            "destination": "/frontend/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}